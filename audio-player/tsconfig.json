{
  "compilerOptions": {
    "target": "ESNext", // Cible ESNext pour du code moderne
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Bibliothèques nécessaires pour React et le navigateur
    "allowJs": true, // Permet les fichiers .js
    "skipLibCheck": true, // Ignore la vérification des bibliothèques pour réduire les erreurs
    "strict": true, // Active toutes les vérifications strictes de TypeScript
    "forceConsistentCasingInFileNames": true, // Évite les erreurs dues à la casse des noms de fichiers
    "esModuleInterop": true, // Active l'interopérabilité ES modules
    "module": "ESNext", // Module ESNext pour la compatibilité avec Vite
    "moduleResolution": "Node", // Résolution des modules comme Node.js
    "resolveJsonModule": true, // Permet l'importation de fichiers JSON
    "isolatedModules": true, // Nécessaire pour le runtime JSX moderne
    "noEmit": true, // Ne génère pas de fichiers JavaScript
    "jsx": "react-jsx" // Utilise le runtime JSX moderne
  },
  "include": ["src", "../../hooks/use-audio-player"], // Limite l'analyse aux fichiers dans le dossier src
  "exclude": ["node_modules"] // Exclut le dossier node_modules
}
